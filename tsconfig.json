{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "es6",
    "declaration": true,
    "rootDir": "./src",
    "target": "ES2017",
    "sourceMap": false,
    "outDir": "dist",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "composite": false,
    "paths": {
      "*": ["./types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
